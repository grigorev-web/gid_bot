{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Простой Telegram бот с поллингом на JavaScript",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "migrate": "node src/database/migrate.js",
    "migrate:down": "node src/database/migrate.js down",
    "pm2:start": "npx pm2 start ecosystem.config.js",
    "pm2:stop": "npx pm2 stop telegram-bot",
    "pm2:restart": "npx pm2 restart telegram-bot",
    "pm2:logs": "npx pm2 logs telegram-bot",
    "pm2:status": "npx pm2 status",
    "pm2:delete": "npx pm2 delete telegram-bot",
    "pm2:save": "npx pm2 save",
    "pm2:startup": "npx pm2 startup",
    "deploy": "bash deploy.sh",
    "update": "bash update-bot.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "telegram",
    "bot",
    "javascript",
    "nodejs",
    "polling"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "mysql2": "^3.6.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 